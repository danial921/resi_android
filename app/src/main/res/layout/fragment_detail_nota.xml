<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.FragmentDetailNota">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/ibBackButton"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_simple"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Nota"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14dp"
            android:textColor="@color/main_dark_blue"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_print"/>

    </RelativeLayout>

    <ScrollView
        android:layout_marginBottom="200px"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingBottom="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvShopName"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pt_indomaret_primatama"
                        android:textStyle="bold"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/tvAdrress"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/jl_keputih_no_3_sukolilo_surabaya_jawa_timur"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvphoneNumber"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+62 858 596 00019"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/ivLogo"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_indomaret"
                    android:layout_gravity="center"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:text="- - - - - - - - - - - - - -  - - - - - - - - - - - - - - - - - - - - - - - - - -- - - - - - - - - - - - - - - -"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="35dp">

                    <TextView
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no"
                        android:textSize="12sp" />
                    <TextView
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tgl_pembelian"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/tvNotaNumber"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": 915315/MIRA/J1"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/tvNotaate"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_06_juni_2023"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:text="- - - - - - - - - - - - - -  - - - - - - - - - - - - - - - - - - - - - - - - - -- - - - - - - - - - - - - - - -"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:background="@color/grey_42">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="110dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:paddingLeft="1dp"
                    android:textAlignment="textStart"
                    android:scrollbarSize="12dp"
                    android:layout_height="wrap_content"
                    android:text="@string/item"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="@string/qty"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:paddingLeft="1dp"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_cost"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:paddingLeft="1dp"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/total_cost"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:paddingLeft="1dp"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDetailNota"
                android:layout_width="match_parent"
                tools:listitem="@layout/item_detail_nota"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:paddingVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_gravity="right">
                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/diskon"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tvDiscount"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="(1000)"
                    android:textSize="12sp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:paddingVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:background="@color/grey_42">
                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/harga_jual"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tvSellPrice"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="43.400"
                    android:textSize="12sp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_gravity="right">
                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="43.400"
                    android:textSize="12sp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_gravity="right">
                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Tunai"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tvTunai"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="50.000"
                    android:textSize="12sp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_gravity="right">
                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Kembalian"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tvReturn"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="6.000"
                    android:textSize="12sp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_gravity="right">
                <TextView
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pembayaran Tunai"
                    android:textSize="9sp"
                    android:gravity="right"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>