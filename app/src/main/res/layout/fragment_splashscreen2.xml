<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.FragmentSplashscreen2"
    android:background="@color/main_blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/heroSplashScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:src="@drawable/hero_splashscreen2"/>
        <TextView
            android:id="@+id/tvSplasscreen"
            android:layout_width="wrap_content"
            android:layout_below="@id/heroSplashScreen"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_regular"
            android:textSize="22dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Ubah Catatanmu, Lebih Efisien dengan Nota Digital!"/>
        <ImageButton
            android:id="@+id/ibNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_mulai"
            android:layout_below="@id/tvSplasscreen"
            android:layout_alignParentEnd="true"
            android:paddingRight="30dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/transparent"/>
    </RelativeLayout>

</FrameLayout>