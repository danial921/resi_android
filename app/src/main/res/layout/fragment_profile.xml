<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.FragmentProfile">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/main_blue">
    </LinearLayout>

<ScrollView
    android:layout_marginBottom="200px"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/contanerHeader"
            android:layout_marginTop="25dp"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/ivFotoProfile"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_profile"/>
            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/ivFotoProfile"
                android:textColor="@color/white"
                android:text="Danial Farros Maulana"/>
            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothica1_regular"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ivFotoProfile"
                android:textColor="@color/white"
                android:layout_below="@id/tvProfile"
                android:text="08585 * * *  619"/>
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothica1_regular"
                android:textSize="10dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/ivFotoProfile"
                android:textColor="@color/white"
                android:layout_below="@id/tvPhoneNumber"
                android:text="danialfarrosmaulana921@gmail.com"/>

            <com.github.captain_miao.optroundcardview.OptRoundCardView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/ivFotoProfile"
                android:layout_below="@id/email"
                app:optRoundCardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingVertical="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivIconStatus"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_verified"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvStatus"
                        android:layout_toRightOf="@id/ivIconStatus"
                        android:layout_marginLeft="10dp"
                        android:text="@string/akun_terverifikasi
"
                        android:textColor="@color/main_green"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </com.github.captain_miao.optroundcardview.OptRoundCardView>
        </RelativeLayout>

        <com.github.captain_miao.optroundcardview.OptRoundCardView
            android:id="@+id/cardSetting1"
            android:layout_width="match_parent"
            android:backgroundTint="@color/white"
            android:layout_below="@id/contanerHeader"
            app:optRoundCardCornerRadius="10dp"
            android:layout_marginHorizontal="24dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gothica1_regular"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="@string/pengatruran_akun"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_next_simple"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>
                <RelativeLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gothica1_regular"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="@string/pengaturan_keamanan"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_next_simple"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>
                <RelativeLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gothica1_regular"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="@string/mulai_gunakan_resi_di_toko_anda"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_next_simple"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>
                <RelativeLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gothica1_regular"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="@string/bahasa"/>
                    <ImageView
                        android:visibility="visible"
                        android:id="@+id/ivBtnlangId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_in"
                        android:background="@color/transparent"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                    <ImageView
                        android:visibility="visible"
                        android:background="@color/transparent"
                        android:id="@+id/ivBtnLangEn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_en"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
        </com.github.captain_miao.optroundcardview.OptRoundCardView>

        <com.github.captain_miao.optroundcardview.OptRoundCardView
            android:id="@+id/cardSetting2"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:backgroundTint="@color/white"
            android:layout_below="@id/cardSetting1"
            app:optRoundCardCornerRadius="10dp"
            android:layout_marginHorizontal="24dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/cvKetentuanLayanan"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gothica1_regular"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="Ketentuan Layanan"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_next_simple"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>
                <RelativeLayout
                    android:id="@+id/cvKebijakanPrivasi"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gothica1_regular"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="Kebijakan Privasi"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_next_simple"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>
                <RelativeLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gothica1_regular"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="@string/pusat_bantuan"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_next_simple"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
        </com.github.captain_miao.optroundcardview.OptRoundCardView>

        <Button
            android:id="@+id/btnlogout"
            android:layout_below="@id/cardSetting2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:backgroundTint="@color/main_blue"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="50px"/>

    </RelativeLayout>
</ScrollView>
</RelativeLayout>